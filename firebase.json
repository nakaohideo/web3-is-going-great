{
    "hosting": {
        "public": "build",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/feed.xml",
                "function": "serveRss"
            },
            {
                "source": "/feed",
                "function": "serveRss"
            },
            {
                "source": "/stagedFeed",
                "function": "serveStagedRss"
            },
            {
                "source": "/stagedFeed.xml",
                "function": "serveStagedRss"
            },
            {
                "source": "/web1",
                "function": "serveWeb1"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    }
}